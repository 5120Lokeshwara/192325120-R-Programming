# 5x4 matrix filled by row
mat1 <- matrix(1:20, nrow = 5, ncol = 4, byrow = TRUE)
cat("5x4 Matrix filled by rows:\n")
print(mat1)

# 3x3 matrix with labels, filled by rows
mat2 <- matrix(1:9, nrow = 3, byrow = TRUE, 
               dimnames = list(c("Row1", "Row2", "Row3"), c("Col1", "Col2", "Col3")))
cat("\n3x3 Matrix with labels filled by rows:\n")
print(mat2)

# 2x2 matrix with labels, filled by columns
mat3 <- matrix(1:4, nrow = 2, byrow = FALSE, 
               dimnames = list(c("R1", "R2"), c("C1", "C2")))
cat("\n2x2 Matrix with labels filled by columns:\n")
print(mat3)
